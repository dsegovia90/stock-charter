include includes/head

.container
	canvas#myChart(width='800' height='400')



.container#content
	.columns
		.column.is-4.is-offset-2
			if stocks
				each stock in stocks
					-var link = '/delete/' + stock
					.card
						.card-header
							p.card-header-title= stock
							a.card-header-icon(href=link)
								span.icon
									i.fa.fa-times
		.column.is-4
			form(action='/' method='post')
				label.label Stock:
				.control
					p.control
						input.input(name='stock' type='text' placeholder='GOOGL' required)
					p.control
						input.button.is-primary(type='submit' value='Search')
.container
	.columns
		.column.is-4.is-offset-6
			while message = flash.shift()
				-var isWhat = 'message is-' + message.type
				article(class=isWhat)
					.message-header
						p=	message.message
						button.delete

